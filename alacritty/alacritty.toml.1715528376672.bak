live_config_reload = true
import = [ "/usr/lib/node_modules/alacritty-themes/themes/Splurge.toml" ]

[cursor]
style = "Block"
unfocused_hollow = true

[font]
size = 14

  [font.bold]
  family = "Inconsolata"
  style = "Bold"

  [font.glyph_offset]
  x = 0
  y = 0

  [font.italic]
  family = "Inconsolata"
  style = "italic"

  [font.normal]
  family = "Inconsolata"
  style = "Medium"

  [font.offset]
  x = 0
  y = 0

[mouse]
hide_when_typing = true

[scrolling]
history = 10_000
multiplier = 3

[window]
decorations = "buttonless"
dynamic_padding = true
dynamic_title = true
startup_mode = "Windowed"
opacity = 0.9

  [window.dimensions]
  columns = 80
  lines = 25

  [window.padding]
  x = 2
  y = 2
